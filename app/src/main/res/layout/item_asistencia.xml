<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con disciplina y estado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/textViewDisciplina"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Yoga"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                android:textColor="@color/ritmo_fit_primary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONFIRMADA"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                android:textColor="@color/success"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Información de la clase -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/textViewSede"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sede Centro"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/gray_dark"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textViewLugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sala 1"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/gray_dark"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textViewProfesor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prof. María García"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/gray_dark" />

        </LinearLayout>

        <!-- Fechas -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_light"
            android:layout_marginVertical="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha de clase"
                    android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                    android:textColor="@color/gray_medium"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/textViewFechaClase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25/09/2025 18:00"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/gray_dark"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha de asistencia"
                    android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                    android:textColor="@color/gray_medium"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/textViewFechaAsistencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25/09/2025 18:05"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/gray_dark"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
